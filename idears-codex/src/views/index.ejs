<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Ideas</title>
  <link rel="stylesheet" href="/static/styles.css">
</head>
<body>
  <h1>Ideas</h1>
  <form method="post" action="/ideas">
    <input type="text" name="title" placeholder="New idea" required>
    <button type="submit">Add Idea</button>
  </form>
  <ul>
    <% ideas.forEach(function(idea) { %>
      <li>
        <strong><%= idea.title %></strong> (<%= idea.votes %> votes)
        <form method="post" action="/ideas/<%= idea.id %>/vote" style="display:inline">
          <button type="submit">Vote</button>
        </form>
        <a href="/ideas/<%= idea.id %>">Details</a>
      </li>
    <% }); %>
  </ul>
</body>
</html>